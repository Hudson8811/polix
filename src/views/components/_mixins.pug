mixin breadcrumbs(paddingLeft=false,item1="", item2="", item3="", item4="", item5="")
	nav.breadcrumbs-wrap
		ul(class="breadcrumbs" + (paddingLeft==true?"":" breadcrumbs--pl0"))
			if(item1=="")
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="") Раздел

				li.breadcrumbs-item Раздел
			else
				li.breadcrumbs-item
					a.breadcrumbs-item-a(href="")
						=item1
				if(item2!="")
					li.breadcrumbs-item
						a.breadcrumbs-item-a(href="")
							=item2
				if(item3!="")
					li.breadcrumbs-item
						a.breadcrumbs-item-a(href="")
							=item3
				if(item4!="")
					li.breadcrumbs-item
						a.breadcrumbs-item-a(href="")
							=item4
				if(item5!="")
					li.breadcrumbs-item
						a.breadcrumbs-item-a(href="")
							=item5

mixin card-item(img, span1, span2)
		div.item
			img(src=img, alt="img")
			.text-block
				span=span1
				span=span2
		
mixin description-item(s1, s2, s3, mobile)
	if (mobile)
		.description-item
			span=s1
			span.lit-span.mobile=s2
			span.bot-span.mobile=s3
	else
		.description-item
			span=s1
			span.lit-span=s2
			span.bot-span=s3